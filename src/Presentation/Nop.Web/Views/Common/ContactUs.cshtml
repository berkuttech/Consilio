            </div>
            @if (Model.SubjectEnabled)
            {
<div class="inputs">
    <label asp-for="Subject" asp-postfix=":"></label>
    <input asp-for="Subject" class="subject" />
    <nop-required />
    <span asp-validation-for="Subject"></span>
</div>}
            <div class="inputs">
